<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <context-param>
    <param-name>Application Name</param-name>
    <param-value>Inventory Management System : Cohort 9</param-value>
  </context-param>

  <context-param>
    <param-name>Application Version</param-name>
    <param-value>1.0.0</param-value>
  </context-param>

  <context-param>
    <param-name>Built Country</param-name>
    <param-value>Kenya</param-value>
  </context-param>

  <context-param>
    <param-name>database-name</param-name>
    <param-value>invetory</param-value>
  </context-param>

  <context-param>
    <param-name>database-pwd</param-name>
    <param-value>inventory123</param-value>
  </context-param>

  <servlet>
    <servlet-name>Item</servlet-name>
    <servlet-class>com.cohort.action.ItemAction</servlet-class>
    <init-param>
      <param-name>Page Name</param-name>
      <param-value>Item Catalog</param-value>
    </init-param>
  </servlet>

  <!-- Servlets  -->
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.cohort.action.LoginAction</servlet-class>
    <init-param>
      <param-name>Page Name</param-name>
      <param-value>Item Catalog</param-value>
    </init-param>
  </servlet>

  <servlet>
    <servlet-name>ItemList</servlet-name>
    <servlet-class>com.cohort.action.ItemListAction</servlet-class>
    <init-param>
      <param-name>Page Name</param-name>
      <param-value>Item Catalog</param-value>
    </init-param>
  </servlet>

  <servlet>
    <servlet-name>ItemForm</servlet-name>
    <servlet-class>com.cohort.action.ItemFormAction</servlet-class>
    <init-param>
      <param-name>Page Name</param-name>
      <param-value>Item Catalog</param-value>
    </init-param>
  </servlet>

  <servlet>
    <servlet-name>ItemSave</servlet-name>
    <servlet-class>com.cohort.action.ItemSaveAction</servlet-class>
    <init-param>
      <param-name>Page Name</param-name>
      <param-value>Item Catalog</param-value>
    </init-param>
  </servlet>

  <servlet>
    <servlet-name>ItemCategory</servlet-name>
    <servlet-class>com.cohort.action.ItemCategoryAction</servlet-class>
  </servlet>

  <filter>
    <filter-name>ItemFilter</filter-name>
    <filter-class>com.cohort.interceptor.ItemFilter</filter-class>
  </filter>

  <!-- Servlets Mappings  -->
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Item</servlet-name>
    <url-pattern>/item</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ItemList</servlet-name>
    <url-pattern>/item/list</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ItemForm</servlet-name>
    <url-pattern>/item/form</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ItemSave</servlet-name>
    <url-pattern>/item/save</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ItemCategory</servlet-name>
    <url-pattern>/itemcategory</url-pattern>
  </servlet-mapping>

  <filter-mapping>
    <filter-name>ItemFilter</filter-name>
    <url-pattern>/item</url-pattern>
  </filter-mapping>

  <!-- Listeners -->
  <listener>
    <listener-class>com.cohort.util.AppBootstrapListener</listener-class>
  </listener>

</web-app>
